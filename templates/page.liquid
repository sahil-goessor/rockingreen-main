<div class="page-head pr tc{%- if settings.other_page_bg_image != blank %} page_jas_bg_image lazyload{%- endif -%}"{%- if settings.other_page_bg_image != blank %} data-bgset="{%- include 'bgset', image: settings.other_page_bg_image -%}" data-sizes="auto" data-parent-fit="cover" style="background-image: url({{ settings.other_page_bg_image | img_url: '50x50' }});"{%- endif -%}>
   <div class="jas-container pr">
      <h1 class="tu mb__10 cw">{{ page.title }}</h1>
      {% comment %}<ul class="jas-breadcrumb dib oh">
         <li class="fl home"><a href="/" title="{{ 'general.breadcrumbs.home' | t }}">{{ 'general.breadcrumbs.home' | t }}</a></li>
         <li class="fl separator"> <i class="fa fa-angle-right"></i> </li>
         <li class="fl current"> {{page.title }}</li>
      </ul>{% endcomment %}
   </div>
</div>
<div class="jas-row jas-page">
  <div class="jas-col-md-12 jas-col-xs-12 mt__60 mb__60" role="main" itemscope="itemscope" itemtype="http://schema.org/CreativeWork">
       <div class="jas-container">
         {% assign content = page.content | strip | replace: 'CDATA', 'CBRO' %}
         {%- include 'shortcode' load: page.content -%}
       </div>


      {% assign _product = all_products[page.metafields.custom_fields["associated_product"]] | default: false %}
      {% assign _title = page.metafields.custom_fields["associated_product_title"] %}

      <style>
         .associated-product .jas-grid-item {
            margin: 30px auto;
         }
      </style>

      {% if _product %}
         {% if _product.available %}

            <div class="associated-product" style="text-align: center; margin: 30px 0;">
               {% if _title %}
                  <h2><a href="{{ _product.url }}">{{ _title }}</a></h2>
               {% endif %}

               {% comment %} Product Grid Item {% endcomment %}
               {% assign product = _product %}
               {%- include 'jas_product_loop' -%}

            </div>
         {% endif %}
      {% endif %}


  </div>
</div>
